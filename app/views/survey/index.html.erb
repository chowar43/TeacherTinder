

<h1>Teachers</h1>

<div><%= link_to 'Main Menu', welcome_index_path %></div>
<div><%= link_to 'Search By Time', prof_index_path %></div>
<div><%= link_to 'Search By Type', instruct_index_path %></div>

<h2>What is your academic year?</h2>
<h4>Please enter: Freshman, Sophomore, Junior, or Senior</h4>

  <%= form_tag(survey_index_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag 'Search', :name => nil %>
  <% end %>
  
  <% @teachers.each do |teacher| %>
    <ul>
      <li><%= link_to teacher.name, survey_path(teacher) %></li><br>
    </ul>
  <% end %>